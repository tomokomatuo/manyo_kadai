<h1>ユーザー編集画面</h1>
<%= form_with(model:[:admin, @user], local: true) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, id: "name_value" %>
    <%= f.label :email %>
    <%= f.email_field :email, id: "email_value" %>
    <%= f.label :password %>
    <%= f.password_field :password, id: "password_value" %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, id: "password_confirmation_value" %>
    <%= f.label :管理者にする %>
    <%= f.check_box :admin %>
    <p name="commit"><%= f.submit %></p>
  <% end %>
  <%= link_to 'ユーザー管理画面に戻る', admin_users_path %>