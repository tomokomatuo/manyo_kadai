<h1>管理画面のユーザー一覧画面だよ！</h1>

<table>
 <tr>
  <th>名前</th>
  <th>メールアドレス</th>
  <th>タスク数</th>

 </tr>

<% @users.each do |user| %>
 <tr>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.tasks.count %></td>
  <td class="show_row"><%= link_to "詳細", admin_user_path(user.id) %></td>
  <td class="delete_row"><%= link_to "削除", admin_user_path(user.id), method: :delete, id: "go_to_delete" %></td>
  <td><%= link_to "編集", edit_admin_user_path(user.id) %></td>
 </tr>
<% end %>
</table>
<%= link_to '新しくユーザーを登録する', new_admin_user_path %>
